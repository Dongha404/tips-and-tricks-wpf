<Window x:Class="EditingStandAloneTables.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/client/2009"
        Title="MainWindow" WindowState="Maximized">
    <Grid>    
        <Border HorizontalAlignment="Center" Background="White" VerticalAlignment="Top" 
                Margin="15"
                BorderBrush="Black" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5" >
                <Button x:Name="AddRecordButton" Content="Add Record to Table" IsEnabled="False" 
                        Width="580" Margin="5" FontSize="24"
                        HorizontalAlignment="Center" Click="AddRecord_Click" />        
                <ListBox x:Name="statusDisplay" Height="600" Margin="5" ></ListBox>                
            </StackPanel>
        </Border>
    </Grid>
</Window>



